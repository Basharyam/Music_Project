<Window x:Class="Telhai.DotNet.PlayerProject.SongEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Song"
        Width="900" Height="600"
        MinWidth="900" MinHeight="600"
        WindowStartupLocation="CenterOwner"
        Background="#222" Foreground="White">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="Edit Song" FontSize="20" FontWeight="Bold"/>
            <TextBlock Text="{Binding FilePath}" Foreground="#AAA" TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Cover -->
            <Border Grid.Column="0" Background="#2B2B2B" CornerRadius="10" Padding="12">
                <StackPanel>
                    <TextBlock Text="Cover" Foreground="#AAA" Margin="0,0,0,8"/>

                    <Border Background="#111" CornerRadius="8" Padding="8">
                        <Image Source="{Binding CoverImage}"
                               Width="280" Height="280"
                               Stretch="UniformToFill"
                               SnapsToDevicePixels="True"/>
                    </Border>

                    <TextBlock Text="{Binding CoverHint}" Foreground="#AAA" Margin="0,10,0,0" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Right: Fields + images list -->
            <Border Grid.Column="2" Background="#2B2B2B" CornerRadius="10" Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Track title edit -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock Text="Song Title (Custom)" Foreground="#AAA"/>
                        <TextBox Text="{Binding CustomTitle, UpdateSourceTrigger=PropertyChanged}"
                                 Height="30"
                                 Background="#333"
                                 Foreground="White"
                                 BorderBrush="#555"/>
                    </StackPanel>

                    <!-- Read-only metadata (from JSON cache only) -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,10">
                        <TextBlock Text="Metadata (from cached JSON only)" Foreground="#AAA" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding TrackName}" />
                        <TextBlock Text="{Binding ArtistName}" Foreground="#DDD"/>
                        <TextBlock Text="{Binding AlbumName}" Foreground="#DDD"/>
                    </StackPanel>

                    <!-- Images list -->
                    <Grid Grid.Row="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="User Images (local paths)" Foreground="#AAA"/>

                        <ListBox Grid.Row="1"
                                 ItemsSource="{Binding UserImages}"
                                 SelectedItem="{Binding SelectedUserImage}"
                                 Background="#333"
                                 Foreground="White"
                                 BorderBrush="#555"
                                 Margin="0,6,0,0"/>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                            <Button Content="Add Image" Width="120" Margin="0,0,8,0"
                                    Command="{Binding AddImageCommand}"/>
                            <Button Content="Remove" Width="120"
                                    Command="{Binding RemoveImageCommand}"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,14,0,0">
            <Button Content="Cancel" Width="120" Margin="0,0,10,0"
                    Command="{Binding CancelCommand}"/>
            <Button Content="Save" Width="120" Background="#007ACC" Foreground="White"
                    Command="{Binding SaveCommand}"/>
        </StackPanel>
    </Grid>
</Window>
